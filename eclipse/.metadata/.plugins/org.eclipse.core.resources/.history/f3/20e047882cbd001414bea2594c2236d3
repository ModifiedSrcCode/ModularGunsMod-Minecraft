package com.kkp.proj.warfare.common.weapon.ranged;

import com.kkp.proj.warfare.PWUtil;
import com.kkp.proj.warfare.common.item.ItemType;
import com.kkp.proj.warfare.common.item.PWItem;

public class PWGun extends PWRanged {
	
	public PWUtil utilities;
	public float recoil;
	
	public PWGun(ItemType itemType)
	{
		super();
	    itemType = utilities.itemType.GUN;
	}
	
	public void recoil()
	{
		utilities.entityplayer.cameraPitch = recoil * 2.4F / 0.5F;
		utilities.entityplayer.cameraYaw = recoil * 1.2F / 0.5F;
	}

}
